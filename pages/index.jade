doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD' crossorigin='anonymous')
    link(rel='stylesheet' href='../public/stylesheets/style.css')
    link(rel='stylesheet' href='../public/stylesheets/home.css')
    title Home
  body
    section.header
      .nav
        div
          a(href='/') Prodcuts
          a(href='#') Store finder
          a(href='#') About
          a(href='/pages/contact') Contact
          a(href='#') Downloads
    section.banner
      .inhoud
        h1 Products
        span.line
        .zoekbalk
          form(action='/' method='GET')
            input.zoeken(type='text' placeholder='Search for a product' name='query')
            a(href='#' onclick='this.parentNode.submit();')
              svg.bi.bi-arrow-right(xmlns='http://www.w3.org/2000/svg' width='16' height='16' fill='currentColor' viewBox='0 0 16 16')
                path(fill-rule='evenodd' d='M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z')
          span.line2
section.producten
  .row
    each product in products
      .col-md-3.d-flex.flex-column.align-items-center
        img(src=product.image_url)
        .titel-bes.text-center.my-3
          h3= product.naam
          p= product.beschrijving
    script(src='../public/javascripts/script.js')












